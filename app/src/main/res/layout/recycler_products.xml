<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:background="@drawable/product_curve"
    android:orientation="horizontal"
    android:layout_margin="20sp"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:onClick="goPostDetail"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/basys_sh"
        >
    </ImageView>

    <LinearLayout
        android:id="@+id/productInfoTable"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="goPostDetail"
        android:orientation="vertical"
        android:padding="20sp"
        android:layout_marginTop="25sp"
        >


        <TextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:onClick="goPostDetail"
            android:text="Clean used basys 3"
            android:textColor="@color/black"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goPostDetail"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="200$"
            android:textColor="@color/black"
            android:textSize="17sp"></TextView>

    </LinearLayout>

    <ImageView
        android:id="@+id/eraseProductCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/erase_product_button"
        ></ImageView>

</LinearLayout>