<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharePostsActivity">

    <!-- arakadaslar bunlari suan icin ekledim, ic kisimda ekleme yapmak icin
     tasarimlari degisirebiliriz sadece id'leri ve onclick kalsa guzel olur-->


    <ImageView
        android:id="@+id/SelectImage"
        android:layout_width="328dp"
        android:layout_height="231dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="116dp"
        android:onClick="selectImage"
        app:layout_constraintBottom_toTopOf="@+id/commentText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bilkent_connect_logo" />

    <EditText
        android:id="@+id/commentText"
        android:layout_width="356dp"
        android:layout_height="0dp"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:hint="enter comment"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sharePost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SelectImage" />

    <Button
        android:id="@+id/sharePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="230dp"
        android:onClick="upload"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentText" />

</androidx.constraintlayout.widget.ConstraintLayout>